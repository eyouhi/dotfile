[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
	side-by-side = true
	line-numbers = true
	dark = true      # or light = true, or omit for auto-detection

[diff]
    colorMoved = default

[merge]
    conflictstyle = zdiff3